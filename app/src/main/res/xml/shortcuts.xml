<shortcuts xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <shortcut
        android:enabled="true"
        android:icon="@drawable/favorites_shortcut"
        android:shortcutId="static_favs_shortcut"
        android:shortcutLongLabel="@string/favorites"
        android:shortcutShortLabel="@string/favorites"
        tools:targetApi="n_mr1">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="favorites_shortcut"
            android:targetClass="com.uxgarage.amoledwallpapers.MainActivity"
            android:targetPackage="com.uxgarage.amoledwallpapers" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <shortcut
        android:enabled="true"
        android:icon="@drawable/search_shortcut"
        android:shortcutId="static_search_shortcut"
        android:shortcutLongLabel="@string/search"
        android:shortcutShortLabel="@string/search"
        tools:targetApi="n_mr1">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="search_shortcut"
            android:targetClass="com.uxgarage.amoledwallpapers.frames.MainActivity"
            android:targetPackage="com.uxgarage.amoledwallpapers" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

</shortcuts>