<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/wallpaper_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/content_margin"
            android:paddingEnd="@dimen/dialog_content_padding"
            android:paddingLeft="@dimen/dialog_content_padding"
            android:paddingRight="@dimen/dialog_content_padding"
            android:paddingStart="@dimen/dialog_content_padding"
            android:paddingTop="@dimen/content_margin"
            android:theme="@style/RippleStyle">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    fontPath="fonts/Font-Medium.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wallpaper_settings_crop"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/text_content_title" />

                <TextView
                    fontPath="fonts/Font-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wallpaper_settings_crop_desc"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/text_content" />

            </LinearLayout>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/wallpaper_crop_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_margin"
                android:layout_marginStart="@dimen/content_margin"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:theme="@style/CheckBoxStyle" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/content_divider_size"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/apply_lockscreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/content_margin"
            android:paddingEnd="@dimen/dialog_content_padding"
            android:paddingLeft="@dimen/dialog_content_padding"
            android:paddingRight="@dimen/dialog_content_padding"
            android:paddingStart="@dimen/dialog_content_padding"
            android:paddingTop="@dimen/content_margin"
            android:theme="@style/RippleStyle">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/apply_lockscreen_title"
                    fontPath="fonts/Font-Medium.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wallpaper_settings_lockscreen"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/text_content_title" />

                <TextView
                    android:id="@+id/apply_lockscreen_subtitle"
                    fontPath="fonts/Font-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wallpaper_settings_lockscreen_desc"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/text_content" />

            </LinearLayout>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/apply_lockscreen_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/content_margin"
                android:layout_marginStart="@dimen/content_margin"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:theme="@style/CheckBoxStyle" />

        </LinearLayout>

        <TextView
            android:id="@+id/apply_lockscreen_error"
            fontPath="fonts/Font-Medium.ttf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/content_margin"
            android:paddingEnd="@dimen/dialog_content_padding"
            android:paddingLeft="@dimen/dialog_content_padding"
            android:paddingRight="@dimen/dialog_content_padding"
            android:paddingStart="@dimen/dialog_content_padding"
            android:text="@string/wallpaper_settings_lockscreen_not_available"
            android:textColor="?attr/colorAccent"
            android:textSize="@dimen/text_content_title"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>