<resources>
    <!-- Set the name of your app -->
    <string name="app_name">Amoled Black Wallpapers</string>

    <!-- Set the default wallpapers download location. Note: Keep the %1$s/ at the beginning -->
    <string name="walls_save_location">%1$s/Amoled Black/Wallpapers/</string>

    <!-- Set the link for the json file where you listed your wallpapers -->
    <string name="wallpapers_json_link">https://drive.google.com/uc?id=0B1GyPx619Gp0Qm1tOHhzYmM5ZE0</string>

    <!-- Muzei -->
    <string name="art_source_name">@string/app_name</string>
    <string name="art_source_description">Awesome UHD Black Walls</string>

    <!-- Set to true if you want the popup menu in toolbar to show icons -->
    <bool name="show_popup_icons">true</bool>

    <!-- Choose a default theme for your app:
        1. Light
        2. Dark
        3. Auto (Light during day, Dark during night) -->
    <integer name="app_theme">2</integer>

    <!-- Set to true if you want to have a wallpaper viewer with a FAB (FloatingActionButton),
        otherwise, set to false -->
    <bool name="fabbed_viewer">false</bool>

    <!-- Wide wallpapers view
    Set to true if you want wallpapers to look like categories.
    -->
    <bool name="wide_wallpapers_view">false</bool>

    <!-- === DONATIONS CONFIGURATION === -->

    <!-- MAKE SURE THAT THE TWO ARRAYS BELOW ALL HAVE THE SAME NUMBER OF ITEMS,
    OR ELSE THIS WON'T WORK-->
    <string-array name="google_donations_items">
        <!--
        Put donation items ids here
        -->
    </string-array>

    <string-array name="google_donations_catalog">
        <!--
        Put name of donation items here
        -->
    </string-array>

    <!-- PAYPAL STUFF - SET BOTH STRINGS, OR IT WON'T WORK -->
    <string name="paypal_email"></string>
    <!-- Paypal currency code (ie USD, or CAD); make sure this is a valid code-->
    <string name="paypal_currency_code"></string>

    <!-- === COLORS === -->
    <!-- Light Theme -->
    <color name="light_theme_primary_dark">#455A64</color>
    <color name="light_theme_primary">#607D8B</color>
    <color name="light_theme_accent">#FF5252</color>
    <color name="light_theme_background">#fafafa</color>
    <color name="light_theme_navigation_bar">@color/light_theme_primary_dark</color>
    <color name="light_theme_card_background">#ffffff</color>
    <color name="light_theme_snackbar">#ffffff</color>
    <color name="light_theme_selected_tab_color">#ffffff</color>
    <color name="light_theme_unselected_tab_color">#80ffffff</color>
    <color name="light_theme_dialogs_button_color">@color/light_theme_accent</color>

    <!-- Dark Theme -->
    <color name="dark_theme_primary_dark">#455A64</color>
    <color name="dark_theme_primary">#607D8B</color>
    <color name="dark_theme_accent">#FF5252</color>
    <color name="dark_theme_background">#303030</color>
    <color name="dark_theme_navigation_bar">@color/dark_theme_primary_dark</color>
    <color name="dark_theme_card_background">#212121</color>
    <color name="dark_theme_snackbar">#212121</color>
    <color name="dark_theme_selected_tab_color">#ffffff</color>
    <color name="dark_theme_unselected_tab_color">#80ffffff</color>
    <color name="dark_theme_dialogs_button_color">@color/dark_theme_accent</color>

    <!-- Theme Independent -->
    <color name="splash_background">@color/light_theme_primary</color>
    <color name="splash_background_dark">@color/light_theme_primary_dark</color>
    <color name="muzei_color">@color/dark_theme_primary</color>
    <color name="notification_color">@color/dark_theme_accent</color>
</resources>